{
  "name": "strat-os-phere",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@8.15.0",
  "scripts": {
    "dev": "next dev",
    "build": "pnpm -s build:guarded",
    "build:guarded": "node scripts/guard-next-build.mjs && next build",
    "build:safe": "node scripts/guard-next-build.mjs; pnpm -s build",
    "build:clean": "node scripts/guard-next-build.mjs && next build",
    "build:ci": "CI=true node scripts/guard-next-build.mjs && next build",
    "start": "next start",
    "typecheck": "tsc --noEmit",
    "typecheck:fast": "tsc --noEmit --pretty false",
    "lint": "eslint .",
    "lint:fast": "pnpm -s lint",
    "fast": "pnpm -s lint:fast && pnpm -s typecheck:fast",
    "lint:deadlinks": "tsx scripts/find-dead-links.ts",
    "harvest:evidence": "tsx scripts/harvest-evidence.ts",
    "preflight": "node scripts/preflight.mjs",
    "preflight:fast": "node scripts/preflight-fast.mjs",
    "preflight:tests": "PREFLIGHT_TESTS=1 node scripts/preflight.mjs",
    "ci:preflight": "pnpm -s typecheck && pnpm -s lint",
    "verify": "pnpm -s preflight && pnpm -s build",
    "typecheck:ci": "pnpm -s typecheck",
    "lint:ci": "pnpm -s lint",
    "test": "vitest run",
    "test:unit": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "e2e": "playwright test",
    "e2e:ui": "playwright test --ui",
    "test:smoke": "playwright test tests/smoke --reporter=line",
    "health": "npm run test:smoke",
    "check:schema": "tsx scripts/check-schema-drift.ts"
  },
  "dependencies": {
    "@radix-ui/react-accordion": "^1.2.12",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@supabase/ssr": "^0.8.0",
    "@supabase/supabase-js": "^2.89.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.561.0",
    "next": "16.0.10",
    "p-limit": "^7.2.0",
    "react": "19.2.1",
    "react-dom": "19.2.1",
    "recharts": "^3.6.0",
    "server-only": "^0.0.1",
    "tailwind-merge": "^3.4.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.48.0",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitest/coverage-v8": "^2.1.8",
    "@vitest/ui": "^2.1.8",
    "eslint": "^9",
    "eslint-config-next": "16.0.10",
    "jsdom": "^25.0.1",
    "msw": "^2.6.4",
    "tailwindcss": "^4",
    "tsx": "^4.19.2",
    "typescript": "^5",
    "vitest": "^2.1.8"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
